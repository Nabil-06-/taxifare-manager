{% extends 'base.html.twig' %}

{% block title %}Ride{% endblock %}

{% block body %}
    <h1>Ride</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ride.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ride.name }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ ride.startTime ? ride.startTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ ride.duration }}</td>
            </tr>
            <tr>
                <th>Distance</th>
                <td>{{ ride.distance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ride_index') }}">back to list</a>

    <a href="{{ path('ride_edit', {'id': ride.id}) }}">edit</a>

    {{ include('ride/_delete_form.html.twig') }}
{% endblock %}
